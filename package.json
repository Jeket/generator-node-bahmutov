{
  "name": "generator-node-bahmutov",
  "description": "My personal Yeoman generator for Node projects",
  "main": "app/index.js",
  "version": "0.0.0-semantic-release",
  "scripts": {
    "test": "npm run unit",
    "commit": "commit-wizard",
    "pretest": "npm run lint",
    "unit": "mocha app/*-spec.js",
    "lint": "standard --verbose --fix app/*.js docker/*.js release/*.js test/*.js",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "issues": "git-issues",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "e2e": "./test/e2e.sh",
    "e2e-typescript": "./test/e2e-typescript.sh",
    "ban": "ban",
    "license": "license-checker --production --onlyunknown --csv",
    "deps": "deps-ok && dependency-check --no-dev ."
  },
  "files": [
    "app/*",
    "docker/*",
    "release/*",
    "!app/*-spec.js"
  ],
  "preferGlobal": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/generator-node-bahmutov.git"
  },
  "keywords": [
    "yeoman",
    "generator",
    "node",
    "npm"
  ],
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bahmutov/generator-node-bahmutov/issues"
  },
  "homepage": "https://github.com/bahmutov/generator-node-bahmutov#readme",
  "dependencies": {
    "check-more-types": "2.23.0",
    "debug": "2.6.0",
    "fixpack": "2.3.1",
    "git-remote-origin-url": "2.0.0",
    "lazy-ass": "1.5.0",
    "lodash": "4.16.3",
    "parse-github-repo-url": "1.3.0",
    "sort-object-keys": "1.1.2",
    "yeoman-generator": "1.0.1"
  },
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm run deps",
        "npm run test",
        "npm run ban"
      ],
      "pre-push": [
        "npm run e2e",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "devDependencies": {
    "ban-sensitive-files": "1.9.0",
    "dependency-check": "2.7.0",
    "deps-ok": "1.2.0",
    "git-issues": "1.3.1",
    "github-post-release": "1.7.1",
    "license-checker": "8.0.3",
    "mocha": "3.2.0",
    "pre-git": "3.12.0",
    "semantic-release": "6.3.6",
    "standard": "8.6.0"
  },
  "release": {
    "generateNotes": "github-post-release"
  }
}
